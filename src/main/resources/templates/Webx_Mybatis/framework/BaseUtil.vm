package ${basePackage}.framework;

import com.alibaba.citrus.service.pull.ToolFactory;

/**
 * BaseUtil - 基本工具
 *
 * @author wangbing
 * @Time 2017-01-01
 * @version 0.0.1
 */
public class BaseUtil implements ToolFactory {

    private static BaseUtil ourInstance = new BaseUtil();

    public static BaseUtil getInstance() {
        return ourInstance;
    }

    private BaseUtil() {
    }

    @Override
    public boolean isSingleton() {
        return true;
    }

    @Override
    public Object createTool() throws Exception {
        return ourInstance;
    }

    public String getTimeMillis(){
        return String.valueOf(System.currentTimeMillis());
    }
}
